<div class="flex flex-col mx-auto w-full">
  <div class="space-y-4 w-full mb-8">
    <h1 class="text-3xl font-bold">
      <%= link_to "All Articles", root_path, class: "hover:underline" %>
    </h1>
  </div>
  <div class="w-1/2 mb-8">
    <% @articles.each do |article| %>
      <%= link_to article do %>
        <div class="min-h-7 text-xl font-bold bg-slate-100 py-4 px-4 my-2 rounded  hover:border-l-indigo-400 hover:border-l-4 hover:cursor-pointer">
          <p class="hover:underline"><%= article.title %></p>
          <p class="text-xs text-slate-500">
            posted: <%= time_ago_in_words article.created_at %>
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
  <div>
    <%= link_to "New Article", new_article_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
