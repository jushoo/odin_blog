<div class="flex-col mx-auto w-full">
  <div class="space-y-4 w-full mb-8">
    <h1 class="text-3xl font-bold">
      <%= link_to 'Articles', root_path, class: "hover:underline" %>
    </h1>
  </div>

  <div class="w-full mb-8 bg-slate-100 rounded p-6 shadow-sm shadow-slate-300">
    <h1 class="text-3xl font-bold mb-4"><%= @article.title %></h1>
    <p class="text-xl"><%= @article.body %><p>
  </div>

  <%= link_to :Edit, edit_article_path(@article), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <%= link_to :Destroy, article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>

  <div class="w-full mt-8">
    <h2 class="text-2xl font-bold mb-4 hover:underline">Comments:</h2>
    <%= render @article.comments %>
  </div>

  <div class="w-1/2 mt-8">
    <h2 class="text-2xl font-bold mb-4 hover:underline">Add a comment:</h2>

    <%= form_with model: [ @article, @article.comments.build ] do |form| %>
      <div class="mx-auto mb-4">
        <%= form.label :commenter, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_field :commenter, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mx-auto mb-8">
        <%= form.label :body, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_area :body, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div>
        <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>
